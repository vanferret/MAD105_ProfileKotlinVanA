<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/idName"
        android:layout_width="141dp"
        android:layout_height="32dp"
        android:layout_marginTop="76dp"
        android:text="@string/txtName"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idProfileInformation"
        android:layout_width="321dp"
        android:layout_height="375dp"
        android:layout_marginTop="92dp"
        android:contentDescription="@string/txtProfileInformation"
        android:text="@string/txtProfileInformation"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idName"
        tools:text="@string/txtProfileInformation" />

</androidx.constraintlayout.widget.ConstraintLayout>